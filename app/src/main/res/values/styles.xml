<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <!-- PreferenceFragmentCompat requires-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>


    </style>

    <style name="AppTheme.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/list_item_row_search_suggest</item>
        <!--<item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>-->
    </style>

    <style name="MyThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:textColorPrimary">#000000</item>-->
        <!--<item name="android:background">#FFFFFF</item>-->
    </style>
</resources>
